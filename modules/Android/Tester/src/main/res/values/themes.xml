<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CordovaTheme" parent="TesterTheme">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="ProjectListTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="toolbarStyle">@style/ProjectsListToolBar</item>
        <item name="colorPrimary">@color/bg_blue_light</item>
        <item name="switchStyle">@style/TesterSwitch</item>
        <item name="android:spinnerStyle">@style/TesterSpinner</item>
    </style>

    <!-- theme non-action-bar for activity_auth activity-->
    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- Base application theme. -->
    <style name="TesterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bg_blue_light</item>
        <item name="toolbarStyle">@style/TesterToolBar</item>
        <item name="switchStyle">@style/TesterSwitch</item>
        <item name="android:spinnerStyle">@style/TesterSpinner</item>
    </style>

    <style name="TesterTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/bg_black</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="TesterToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/bg_blue_light</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
    </style>

    <style name="ProjectsListToolBar" parent="TesterToolBar">
        <item name="android:background">@color/bg_green</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/bg_black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TesterSwitch"
           parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/bg_green</item>
    </style>

    <style name="TesterSwitchMarketing"
           parent="Widget.AppCompat.CompoundButton.Switch">

        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/bg_green</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/bg_grey_dark</item>
    </style>

    <style name="TesterSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_btn_border_white_inside_transparent</item>
    </style>
</resources>
