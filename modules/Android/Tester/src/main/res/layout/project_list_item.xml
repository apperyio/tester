<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ProjectItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:src="@drawable/icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/logo"
        android:orientation="vertical"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/title_tv"
            style="@style/ProjectItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Long Project Name"
            android:lines="1"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lastEditor_tv"
                style="@style/ProjectItemLastEditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="very_long_name_of_author@email.com"
                android:lines="1" />

            <TextView
                android:id="@+id/lastEditDate_tv"
                style="@style/ProjectItemLastEditDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginLeft="4dp"
                android:text="31.12.2012"
                android:lines="1" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>